<h2>
  <%= "#{@project.name}  (#{@project.number})" %>
  <span><%= link_to "Project by number", project_path(@project.id)%></span>
</h2>
<h4><%= @project.percent_in_shop %> % Finished</h4>
<br>

<table>
  <tr>
    <th>Drawing No.</th>
    <th>Status</th>
    <th>Note</th>
    <th>Last Updated</th>
  </tr>
  <% @drawings.each do |drawing| %>
    <tr>
      <td class="table-column <%= drawing.status %>"><%= link_to drawing.number, drawing_path(drawing.id) %></td>
      <td class="table-column <%= drawing.status %>"><%= drawing.status || "-" %></td>
      <td class="table-column notes <%= drawing.status %>"><%= drawing.notes || "-" %></td>
      <td class="table-column <%= drawing.status %>"><%= drawing.updated_at.strftime("%b %d, %Y") %></td>
      <td class="table-column-delete"><%= link_to "Delete", drawing_path(drawing.id), method: "delete", id: "drawing-delete-#{drawing.id}" %></td>
    </tr>
  <% end %>
</table>
<br>
<%= form_tag drawings_path do %>
    <%= hidden_field_tag :project_id, @project.id %>
    <%= label_tag :drawings, "Drawings" %>
    <%= text_field_tag :drawings %>
    <%= label_tag :status, "Status" %>
    <%= text_field_tag :status %>
    <%= label_tag :notes, "Note" %>
    <%= text_field_tag :notes %>
    <%= submit_tag "Update" %>
<% end %>